# songIQ Server Production Environment Template
# Copy this to .env.production and update with actual production values
# NEVER commit .env.production files to git!

# Server Configuration
PORT=5001
NODE_ENV=production

# Database Configuration
# MongoDB Atlas connection string - Replace with your actual connection string
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Music Industry APIs
# Spotify API Configuration
# Get these from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_production_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_production_spotify_client_secret_here

# Last.fm API Configuration
# Get this from: https://www.last.fm/api/account/create
LASTFM_API_KEY=your_production_lastfm_api_key_here

# YouTube API Configuration
# Get this from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_production_youtube_api_key_here

# Social Media APIs
# Twitter API v2 Configuration
# Get this from: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your_production_twitter_bearer_token_here

# Instagram Basic Display API
# Get this from: https://developers.facebook.com/docs/instagram-basic-display-api
INSTAGRAM_ACCESS_TOKEN=your_production_instagram_access_token_here

# TikTok API Configuration
# Get this from: https://developers.tiktok.com/
TIKTOK_ACCESS_TOKEN=your_production_tiktok_access_token_here

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Email Configuration
EMAIL_SERVICE=sendgrid
EMAIL_USER=apikey
EMAIL_PASSWORD=your_production_sendgrid_api_key_here
FRONTEND_URL=https://songiq.ai

# Twilio Configuration (SMS Verification)
TWILIO_ACCOUNT_SID=your_production_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_production_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+14694534273

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./uploads

# CORS Configuration
ALLOWED_ORIGINS=https://songiq.ai,https://www.songiq.ai

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Stripe Configuration
# Get these from: https://dashboard.stripe.com/developers/api-keys
# IMPORTANT: Use LIVE keys for production, not test keys!
# STRIPE_PUBLISHABLE_KEY=
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# Stripe Price IDs - Create these products in your Stripe dashboard
# Go to: https://dashboard.stripe.com/products
# STRIPE_BASIC_PLAN_PRICE_ID=
# STRIPE_PRO_PLAN_PRICE_ID=
# STRIPE_ENTERPRISE_PLAN_PRICE_ID=
