# Server Configuration
PORT=5001
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/songiq

# Music Industry APIs
# Spotify API Configuration
# Get these from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Last.fm API Configuration
# Get this from: https://www.last.fm/api/account/create
LASTFM_API_KEY=your_lastfm_api_key_here

# YouTube API Configuration
# Get this from: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# Social Media APIs
# Twitter API v2 Configuration
# Get this from: https://developer.twitter.com/en/portal/dashboard
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here

# Instagram Basic Display API
# Get this from: https://developers.facebook.com/docs/instagram-basic-display-api
INSTAGRAM_ACCESS_TOKEN=your_instagram_access_token_here

# TikTok API Configuration
# Get this from: https://developers.tiktok.com/
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token_here

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_PATH=./uploads

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Stripe Configuration
# STRIPE_PUBLISHABLE_KEY=
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# Stripe Price IDs (create these in your Stripe dashboard)
# STRIPE_BASIC_PLAN_PRICE_ID=
# STRIPE_PRO_PLAN_PRICE_ID=
# STRIPE_ENTERPRISE_PLAN_PRICE_ID= 